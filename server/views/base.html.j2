  <main>
{% if error or message %}
    <div>
      {% if error %}<output class="danger">{{ error }}</output>{% endif %}
      {% if message %}<output class="message">{{ message }}</output>{% endif %}
    </div>
{% endif %}
    <article>
      {% block content %}{% endblock %}
    </article>
  </main>
</body>

<footer>
